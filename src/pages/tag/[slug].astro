const adminName = admin.name;
function withAvatarMirror(url: string | undefined): string {
  const mirror = import.meta.env.PUBLIC_AVATAR_MIRROR || '';
  if (!url) return 'https://cn.cravatar.com/avatar/';
  if (!mirror) return url;
  try { const u = new URL(url); u.hostname = mirror.replace(/^https?:\/\//,'').replace(/\/$/,''); return u.toString(); } catch { return url || 'https://cn.cravatar.com/avatar/'; }
}
const adminAvatar = withAvatarMirror(admin.avatar_urls?.['96'] || admin.avatar_urls?.['48'] || '');
function relativeTime(dateStr: string): string {
  const d = new Date(dateStr);
  const now = new Date();
  const diff = Math.max(0, now.getTime() - d.getTime());
  const mins = Math.floor(diff / 60000);
  if (mins < 60) return `${mins}åˆ†é’Ÿå‰`;
  const hours = Math.floor(mins / 60);
  if (hours < 24) return `${hours}å°æ—¶å‰`;
  const days = Math.floor(hours / 24);
  if (days < 30) return `${days}å¤©å‰`;
  const months = Math.floor(days / 30);
  if (months < 12) return `${months}ä¸ªæœˆå‰`;
  const years = Math.floor(months / 12);
  return `${years}å¹´å‰`;
}
function isNew(dateStr: string): boolean {
  const created = new Date(dateStr).getTime();
  return (Date.now() - created) <= 3 * 24 * 60 * 60 * 1000;
}
function extractImages(html: string): string[] {
  const urls: string[] = [];
  if (!html) return urls;
  const imgTagRegex = /<img\b[^>]*>/gi;
  const attrRegex = (name: string) => new RegExp(`${name}\s*=\s*([\"'])(.*?)\1`, 'i');
  const allowedExt = /\.(?:png|jpe?g|gif|webp|svg|bmp|ico|avif|tiff?)(?:\?.*)?(?:#.*)?$/i;
  const dataImage = /^data:image\//i;
  const seen = new Set<string>();
  let m: RegExpExecArray | null;
  while ((m = imgTagRegex.exec(html)) && urls.length < 20) {
    const tag = m[0];
    const tryGet = (name: string): string | null => {
      const a = attrRegex(name).exec(tag);
      if (!a) return null;
      const val = (a[2] || '').trim();
      return val || null;
    };
    let u = tryGet('data-src') || tryGet('data-original') || tryGet('data-lazy-src') || tryGet('src') || null;
    if (!u) {
      const srcset = tryGet('srcset');
      if (srcset) {
        const first = srcset.split(',')[0].trim().split(/\s+/)[0];
        u = first || null;
      }
    }
    if (!u) continue;
    if (u.startsWith('//')) {
      u = 'https:' + u;
    }
    if (!allowedExt.test(u) && !dataImage.test(u)) continue;
    if (seen.has(u)) continue;
    seen.add(u);
    urls.push(u);
  }
  return urls;
}
